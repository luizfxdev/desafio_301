{
  "name": "desafio_301",
  "version": "1.0.0",
  "description": "Desafio interativo inspirado em Demon Slayer - Kyojuro Rengoku",
  "main": "index.html",
  "scripts": {
    "dev": "npm-run-all --parallel watch serve",
    "serve": "live-server --port=3000 --open=/index.html --no-css-inject",
    "watch": "sass --watch styles.scss:styles.css --style=expanded --source-map",
    "sass:compile": "sass styles.scss styles.css --style=expanded --source-map",
    "sass:compressed": "sass styles.scss styles.css --style=compressed --no-source-map",
    "build": "npm run sass:compressed",
    "start": "npm run dev",
    "clean": "del styles.css styles.css.map",
    "audit": "npm audit",
    "audit:fix": "npm audit fix --force",
    "update": "npm update"
  },
  "keywords": [
    "demon-slayer",
    "rengoku",
    "javascript",
    "scss",
    "interactive",
    "challenge",
    "anime",
    "kyojuro-rengoku",
    "chamas-da-verdade"
  ],
  "author": "Desenvolvedor",
  "license": "MIT",
  "devDependencies": {
    "del-cli": "^5.1.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.5"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "braces": "^3.0.3",
    "chokidar": "^3.5.3",
    "micromatch": "^4.0.8"
  },
  "type": "module"
}
